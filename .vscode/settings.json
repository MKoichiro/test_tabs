{
    // ファイルの改行コードをLFに統一
    "files.eol": "\n",
    // eslint拡張機能の設定
    "eslint.validate": ["typescript", "javascript"],
	  "eslint.experimental.useFlatConfig": true,

    // prettier拡張機能の設定
    "prettier.configPath": ".prettierrc.js",
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // code spell checker拡張機能の設定
    "cSpell.words": [
        "autodocs",
        "btns",
        "codepaths",
        "Disp",
        "dompurify",
        "easymde",
        "Economica",
        "Editings",
        "fontawesome",
        "fortawesome",
        "Hiragino",
        "Kaku",
        "Meiryo",
        "Neue",
        "reduxjs",
        "remotedebug",
        "simplemde",
        "Slided",
        "todos",
        "tsbuildinfo",
        "tsdoc",
        "uuidv",
        "Xmark"
    ],

    // code runner拡張機能の設定
    "code-runner.executorMap": {
        "javascript": "node",
        "typescript": "ts-node",
    },
}