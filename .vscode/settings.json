{
  // eslint拡張機能の設定
  "eslint.validate": ["typescript", "javascript"],
	"eslint.experimental.useFlatConfig": true,

  // prettier拡張機能の設定
  "prettier.configPath": ".prettierrc.js",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // cSpell拡張機能の設定
  "cSpell.words": [
    "autodocs",
    "codepaths",
    "Disp",
    "dompurify",
    "easymde",
    "fontawesome",
    "fortawesome",
    "reduxjs",
    "remotedebug",
    "simplemde",
    "tsbuildinfo"
  ]
}